@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "_BanPostPartial";
}

@if (User.IsInRole(Roles.Administrator))
{

    <div class="d-inline ml-2">
        <a class="btn btn-sm btn-outline-danger" asp-controller="List" asp-action="BanPost" asp-route-id="@ViewData["PostId"]">
            Ban
        </a>
    </div>

}