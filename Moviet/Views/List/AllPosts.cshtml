@model IEnumerable<Moviet.Models.PostVM>
@{
    ViewData["Title"] = "All Posts";
}

<h1>All Posts</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PostID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Title)
            </td>
            <td>
                <a class="btn btn-danger" asp-controller="Movies" asp-action="Details" asp-route-id="@item.PostID"><i class="fa fa-info-circle"></i> Details</a>
                <a class="btn btn-danger" asp-controller="List" asp-action="BanPost" asp-route-id="@item.PostID"><i class="fa fa-ban"></i> Ban</a>
            </td>
        </tr>
        }
    </tbody>
</table>
