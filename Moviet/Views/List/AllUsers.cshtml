@model List<Moviet.Models.IdentityUserVM>

@{
    ViewData["Title"] = "All Users";
}

<h1>All Users</h1>

<p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
               Email
            </th>
            <th>
                Role
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a class="btn btn-danger" asp-controller="Ban" asp-action="BanUser" asp-route-id="@item.Id"><i class="fa fa-ban"></i> Ban</a>
            </td>
        </tr>
}
    </tbody>
</table>
